<%= form_with(model: [@resource, @resource_state]) do |form| %>

   <% if @resource_state.errors.any? %>
     <div style="color: red">
       <h2><%= pluralize(resource_state.errors.count, "error") %></h2>

       <ul>
         <% resource_state.errors.each do |error| %>
           <li><%= error.full_message %></li>
         <% end %>
       </ul>
     </div>
   <% end %>

   <div>
     <%= form.label :is_checked, "Was the resource checked? *"%>
   </div>
   <div class="d-flex flex-row mb-1">
     <%= form.radio_button :report_to_supervisor, true, class: "btn-check", required: true%>
     <%= form.label :report_to_supervisor_true, "Yes", class: "btn btn-outline-success w-50" %>
     <%= form.radio_button :report_to_supervisor, false, class: "btn-check", required: true%>
     <%= form.label :report_to_supervisor_false, "No", class: "btn btn-outline-success w-50" %>
   </div>

   <div>
     <%= form.submit %>
     <%= link_to "Cancel", :back, class:"text-primary cancel-button" %>
   </div>

 <% end %>


