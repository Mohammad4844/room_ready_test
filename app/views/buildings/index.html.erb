<div class="container-fluid" id="buildings">
  <div class="d-flex justify-content-between">
    <h1>Buildings</h1>
    <div class="mb-auto mt-auto">
      <%= link_to "Add Building", new_building_path, class: "btn btn-primary" %>
    </div>
    </div>
    <%= form_with url: buildings_path, method: :get, class: "", 
      data: { 
        controller: "autosubmit", 
        autosubmit_target: "form", 
        turbo_frame: "all_buildings" 
      } do |form| %>
      <div>
        <label for="zone_id" class="fancy_label">Select a Zone</label>
        <%#= select_tag "zone_id", options_from_collection_for_select(@zones, :id, :name, selected: params[:zone_id]), include_blank: "Select ...",
          :"data-action" => "change->autosubmit#submitForm" %>
          <%= form.select "zone_id", options_for_select(@zones, selected: params[:zone_id]), {include_blank: "Select ..."}, { :"data-action" => "change->autosubmit#submitForm" } %>

          <%#= form.select "student_id", options_for_select(@students_data, selected: params[:student_id]), {include_blank: "All Programs"}, {class: "filter_select w-full",
                :"data-action" => "change->autosubmit#search"} %>
      </div>
      <h3>
        <% if @zone.present? %>
          <%= @zone.name %>
        <% else %>
          All
        <% end %>
        Buildings (<%= @buildings.count %>)
      </h3>
      <%= render "listing" %>
    <% end %>
  </div>
</div>
