<div class="container-fluid" id="buildings">
  <div class="d-flex justify-content-between">
      <h1><%= @zone_name %> Buildings</h1>
      <div class="mb-auto mt-auto">
        <%= link_to "Back to Zone", zone_path(@zone_id), class: "btn btn-secondary" %>
        <%= link_to "Add Building", new_zone_building_path(@zone_id), class: "btn btn-primary" %>
      </div>
    </div>
  <div class="row">
    <% @buildings.each do |building| %>
      <div class="card m-2" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title handle-text-overflow"><%= render building %></h5>
          <%= link_to "Show Full Details", zone_building_path(@zone_id, building) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
