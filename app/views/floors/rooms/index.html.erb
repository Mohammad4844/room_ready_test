<p style="color: green"><%= notice %></p>

<h1>Rooms</h1>

<div>
  <% unless @rooms_page_announcement.nil? %>
    <%= @rooms_page_announcement.content %>
  <% end %>
</div>

<div id="rooms">
  <% @rooms.each do |room| %>
    <%= render room %>
    <p>
      <%= link_to "Show this room", room %>
    </p>
  <% end %>
</div>

<%= link_to "New room", new_room_path %>
