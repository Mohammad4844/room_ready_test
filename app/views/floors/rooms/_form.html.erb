<%= form_with model: [@building, @floor, room] do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %></h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :rmrecnbr, style: "display: block" %>
    <%= form.text_field :rmrecnbr %>
  </div>

  <div>
    <%= form.label :room_number, style: "display: block" %>
    <%= form.text_field :room_number %>
  </div>

  <div>
    <%= form.label :room_type, style: "display: block" %>
    <%= form.text_field :room_type %>
  </div>

  <div class="d-flex flex-row justify-content-start align-items-center gap-3">
    <%= form.submit "Submit", class: "btn btn-primary" %>
    <%= link_to 'Cancel', :back %>
  </div>
<% end %>
