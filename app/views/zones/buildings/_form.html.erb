<%= form_with model: [@zone, building] do |form| %>
  <% if building.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(building.errors.count, "error") %></h2>

      <ul>
        <% building.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :bldrecnbr, style: "display: block" %>
    <%= form.text_field :bldrecnbr, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

