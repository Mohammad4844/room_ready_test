<div class="d-flex justify-content-between align-items-center">
  <h1>Building Details</h1>
  <div class="">
    <%= link_to "Back to buildings", zone_buildings_path, class: "btn btn-primary h-50 mt-auto mb-auto"  %>
  </div>
</div>
<%= render @building %>

<h2>Rooms </h2>

<div class="accordion accordion-flush" id="buildingFloors">
  <% @floors.each do |floor| %>
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_<%= floor.id %>" aria-expanded="false" aria-controls="collapse_<%= floor.id %>">
          Rooms on the floor <%= floor.name %>
        </button>
      </h2>
      <div id="collapse_<%= floor.id %>" class="accordion-collapse collapse" data-bs-parent="#buildingFloors">
        <div class="accordion-body">
          <% floor.rooms.each do |room| %>
            <div>
              <%= link_to room.room_number, room_path(room), class: "cancel-button" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

</div>
