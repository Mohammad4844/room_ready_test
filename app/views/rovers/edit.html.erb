<p></p>
<h1>Editing Rover</h1>

<%= form_with(model: rover=@rover) do |form| %>
  <% if rover.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(rover.errors.count, "error") %></h2>
      <ul>
        <% rover.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <div>Rover Uniqname:</div>
    <div><%= rover.uniqname %></div>
  </div>
  <div>
    <%= form.label :first_name, "First Name:", style: "display: block"%>
    <%= form.text_field :first_name %>
  </div>
  <div>
    <%= form.label :last_name, "Last Name:", style: "display: block"%>
    <%= form.text_field :last_name %>
  </div>
  <div>
    <%= form.submit "Update" %>
  </div>
<% end %>
<br>

<div>
  <%= link_to "Back to Rovers", rovers_path , class: "btn btn-primary btn-sm"%>
</div>
