<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %></h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :rmrecnbr, style: "display: block" %>
    <%= form.text_field :rmrecnbr, required: true %>
  </div>

  <div>
    <%= form.label :room_number, style: "display: block" %>
    <%= form.text_field :room_number, required: true %>
  </div>

  <div>
    <%= form.label :room_type, style: "display: block" %>
    <%= form.text_field :room_type, required: true %>
  </div>

  <div>
    <%= form.label :floor_id, style: "display: block" %>
    <%= form.select(:floor_id, options_for_select(@floors, room.floor.id), { include_blank: "Select ..." }, required: true ) %>
  </div>

  <div class="d-flex flex-row justify-content-start align-items-center gap-3">
    <%= form.submit %>
    <%#= link_to "Cancel", room_path(room), class: "text-primary cancel-button" %>
    <%= link_to "Cancel", :back, class: "text-primary cancel-button" %>

  </div>
<% end %>
