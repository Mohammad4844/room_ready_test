<%= turbo_frame_tag 'new_room' do %>  
  <%= form_with model: room do |form| %>
    <% if room.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(room.errors.count, "error") %></h2>

        <ul>
          <% room.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.label :rmrecnbr, style: "display: block" %>
      <%= text_field_tag :rmrecnbr %>
    </div>

    <%= hidden_field_tag 'building_id', @building.id %>

    <div class="d-flex flex-row justify-content-start align-items-center gap-3">
      <%= form.submit "Submit", class: "btn btn-primary" %>
      <%= link_to 'Cancel', building_path(@building) %>
    </div>
  <% end %>
<% end %>
