<%= form_with(model: [@room, room_state]) do |form| %>
  <% if room_state.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room_state.errors.count, "error") %></h2>

      <ul>
        <% room_state.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :checked_by, style: "display: block" %>
    <%= form.text_field :checked_by, value: user.uniqname, readonly: true %>
  </div>

  <div>
    <%= form.label :is_accessed, style: "display: block" %>
    <%= form.check_box :is_accessed %>
  </div>

  <div>
    <%= form.label :report_to_supervisor, style: "display: block" %>
    <%= form.check_box :report_to_supervisor %>
  </div>

  <div>
    <%= form.label :room_id, style: "display: block" %>
    <%= form.text_field :room_id, value: @room.id, readonly: true%>
  </div>

  <div>
    <%= form.submit %>
    <%= link_to "Cancel", room_room_states_path %>
  </div>
<% end %>
