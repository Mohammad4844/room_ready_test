<!--This is an empty preferences form for filling out-->

<%= form_with(model: app_preference) do |form| %>
  <% if app_preference.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(app_preference.errors.count, "error") %></h2>

      <ul>
        <% app_preference.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 row">
    <%= form.label :name,  "Name *", class: "col-sm-2 col-form-label", style: "display: block" %>
    <div class="col-sm-10">
      <%= form.text_field :name, required: true  %>
      </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :description, "Description *", class: "col-sm-2 col-form-label", style: "display: block" %>
    <div class="col-sm-10">
      <%= form.text_field :description, required: true  %>
      </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :pref_type, "Type *", class: "col-sm-2 col-form-label", style: "display: block" %>
    <div class="col-sm-10">
      <%= form.select :pref_type,  @pref_types, { include_blank: "Select ...", required: true }, { class: "input_text_field" } %>
      
  </div>

  <div class="d-flex flex-row justify-content-start align-items-center gap-3">
      <%= form.submit "Submit", class: "btn btn-primary" %>

      <%= link_to "Cancel", app_preferences_path, class: "text-primary cancel-button" %>
  </div>
<% end %>
