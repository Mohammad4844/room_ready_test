<%= form_with(model: app_preference) do |form| %>
  <% if app_preference.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(app_preference.errors.count, "error") %> prohibited this app_preference from being saved:</h2>

      <ul>
        <% app_preference.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 row">
    <%= form.label :name, class: "col-sm-2 col-form-label", style: "display: block" %>
    <div class="col-sm-10">
      <%= form.text_field :name, required: true  %>
      </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :description, class: "col-sm-2 col-form-label", style: "display: block" %>
    <div class="col-sm-10">
      <%= form.text_field :description, required: true  %>
      </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :pref_type, class: "col-sm-2 col-form-label", style: "display: block" %>
    <div class="col-sm-10">
      <%= form.select :pref_type,  @pref_types, { include_blank: "Select ...", required: true }, { class: "input_text_field" } %>
      
  </div>

  <div class="mb-3 row">
    <div class="col-sm-10 offset-sm-2">
      <%= form.submit "Submit", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
